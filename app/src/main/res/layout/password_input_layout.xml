<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_password_input_hidden_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/gl_password_input_main_right"
            app:layout_constraintStart_toStartOf="@id/gl_password_input_main_left"
            app:layout_constraintTop_toTopOf="@id/gl_password_input_main_top">

            <ImageView
                android:id="@+id/iv_hidden_number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:src="@drawable/ic_point" />

            <ImageView
                android:id="@+id/iv_hidden_number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:src="@drawable/ic_point" />

            <ImageView
                android:id="@+id/iv_hidden_number_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:src="@drawable/ic_point" />

            <ImageView
                android:id="@+id/iv_hidden_number_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:src="@drawable/ic_point" />

        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_password_input_main_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_password_input_main_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_password_input_main_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_password_input_main_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_password_input_hor_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.18" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_password_input_hor_36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.36" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_password_input_hor_54"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.54" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_password_input_hor_72"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.72" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_password_input_ver_36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.36" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_password_input_ver_64"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.64" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_password_input_number_1"
            style="@style/Button.Password.Input.Number"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="1"
            app:layout_constraintBottom_toBottomOf="@id/gl_password_input_hor_36"
            app:layout_constraintEnd_toEndOf="@id/gl_password_input_ver_36"
            app:layout_constraintStart_toStartOf="@id/gl_password_input_main_left"
            app:layout_constraintTop_toTopOf="@id/gl_password_input_hor_18" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_password_input_number_2"
            style="@style/Button.Password.Input.Number"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="2"
            app:layout_constraintBottom_toBottomOf="@id/gl_password_input_hor_36"
            app:layout_constraintEnd_toEndOf="@id/gl_password_input_ver_64"
            app:layout_constraintStart_toStartOf="@id/gl_password_input_ver_36"
            app:layout_constraintTop_toTopOf="@id/gl_password_input_hor_18" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_password_input_number_3"
            style="@style/Button.Password.Input.Number"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="3"
            app:layout_constraintBottom_toBottomOf="@id/gl_password_input_hor_36"
            app:layout_constraintEnd_toEndOf="@id/gl_password_input_main_right"
            app:layout_constraintStart_toStartOf="@id/gl_password_input_ver_64"
            app:layout_constraintTop_toTopOf="@id/gl_password_input_hor_18" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_password_input_number_4"
            style="@style/Button.Password.Input.Number"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="4"
            app:layout_constraintBottom_toBottomOf="@id/gl_password_input_hor_54"
            app:layout_constraintEnd_toEndOf="@id/gl_password_input_ver_36"
            app:layout_constraintStart_toStartOf="@id/gl_password_input_main_left"
            app:layout_constraintTop_toTopOf="@id/gl_password_input_hor_36" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_password_input_number_5"
            style="@style/Button.Password.Input.Number"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="5"
            app:layout_constraintBottom_toBottomOf="@id/gl_password_input_hor_54"
            app:layout_constraintEnd_toEndOf="@id/gl_password_input_ver_64"
            app:layout_constraintStart_toStartOf="@id/gl_password_input_ver_36"
            app:layout_constraintTop_toTopOf="@id/gl_password_input_hor_36" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_password_input_number_6"
            style="@style/Button.Password.Input.Number"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="6"
            app:layout_constraintBottom_toBottomOf="@id/gl_password_input_hor_54"
            app:layout_constraintEnd_toEndOf="@id/gl_password_input_main_right"
            app:layout_constraintStart_toStartOf="@id/gl_password_input_ver_64"
            app:layout_constraintTop_toTopOf="@id/gl_password_input_hor_36" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_password_input_number_7"
            style="@style/Button.Password.Input.Number"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="7"
            app:layout_constraintBottom_toBottomOf="@id/gl_password_input_hor_72"
            app:layout_constraintEnd_toEndOf="@id/gl_password_input_ver_36"
            app:layout_constraintStart_toStartOf="@id/gl_password_input_main_left"
            app:layout_constraintTop_toTopOf="@id/gl_password_input_hor_54" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_password_input_number_8"
            style="@style/Button.Password.Input.Number"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="8"
            app:layout_constraintBottom_toBottomOf="@id/gl_password_input_hor_72"
            app:layout_constraintEnd_toEndOf="@id/gl_password_input_ver_64"
            app:layout_constraintStart_toStartOf="@id/gl_password_input_ver_36"
            app:layout_constraintTop_toTopOf="@id/gl_password_input_hor_54" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_password_input_number_9"
            style="@style/Button.Password.Input.Number"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="9"
            app:layout_constraintBottom_toBottomOf="@id/gl_password_input_hor_72"
            app:layout_constraintEnd_toEndOf="@id/gl_password_input_main_right"
            app:layout_constraintStart_toStartOf="@id/gl_password_input_ver_64"
            app:layout_constraintTop_toTopOf="@id/gl_password_input_hor_54" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_password_input_number_0"
            style="@style/Button.Password.Input.Number"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="@id/gl_password_input_main_bottom"
            app:layout_constraintEnd_toEndOf="@id/gl_password_input_ver_64"
            app:layout_constraintStart_toStartOf="@id/gl_password_input_ver_36"
            app:layout_constraintTop_toTopOf="@id/gl_password_input_hor_72" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_password_input_back"
            style="@style/Button.Password.Input.Number.Back"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:icon="@drawable/ic_arrow_back"
            app:iconGravity="textEnd"
            app:iconTint="@color/text_color_black"
            app:layout_constraintBottom_toBottomOf="@id/gl_password_input_main_bottom"
            app:layout_constraintEnd_toEndOf="@id/gl_password_input_main_right"
            app:layout_constraintStart_toStartOf="@id/gl_password_input_ver_64"
            app:layout_constraintTop_toTopOf="@id/gl_password_input_hor_72" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_password_input_forgot"
            style="@style/Button.Password.Input.Number.Forgot"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:maxWidth="80dp"
            app:layout_constraintBottom_toBottomOf="@id/gl_password_input_main_bottom"
            app:layout_constraintEnd_toEndOf="@id/gl_password_input_ver_36"
            app:layout_constraintStart_toStartOf="@id/gl_password_input_main_left"
            app:layout_constraintTop_toTopOf="@id/gl_password_input_hor_72" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>